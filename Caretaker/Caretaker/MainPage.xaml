<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:local="clr-namespace:Caretaker"  
             x:Class="Caretaker.MainPage" BackgroundImageSource="https://i.pinimg.com/280x280_RS/59/06/4e/59064e50006ff5c8b5cc991213fc34cc.jpg">
    <ContentPage.Content>
        <StackLayout Padding="10" Margin="30,20,20,10">
            <Label Text="Login Registration Page"></Label>
            <Label Text="UserName" TextColor="Black"/>
            <Entry Text="" Placeholder="UserName" x:Name="UserNameEntry"/>
            <Label Text="Password" TextColor="Black"/>
            <Entry Text="" Placeholder="Password" IsPassword="True"/>
            <Button Text="Login" BackgroundColor="DarkGray"  TextColor="Black" Clicked="Button_Clicked"></Button>
            <Label Text="First Time? Sign Up" HorizontalOptions="Center" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Signup_Page" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Made with ♥ by Priyanshu"   
           HorizontalOptions="Center"  
           VerticalOptions="EndAndExpand">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="Tandc" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
